{
    "manifest_version": 2,
    "default_locale": "cs",
    "name": "__MSG_extName__",
    "description": "This extension allows to file a new issue to bugzilla.",
    "version": "0.3",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "options_page" :"options.html",
    "permissions": [
        "http://bugzilla.rem.cz/",
        "notifications",
        "storage"
    ],
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
